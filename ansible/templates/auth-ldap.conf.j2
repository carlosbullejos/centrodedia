<VirtualHost *:8080>
    DocumentRoot /var/www/html

    <Location "/protegido">
        AuthType Basic
        AuthName "LDAP Authentication"
        AuthBasicProvider ldap
        AuthLDAPURL "ldap://ldap-service:389/dc=carlosftp,dc=com"
        AuthLDAPBindDN "cn=admin,dc=carlosftp,dc=com"
        AuthLDAPBindPassword "admin_password"
        Require valid-user
    </Location>

        Alias /protegido /var/www/html/protected
<Directory /var/www/html/protected>
    Require all granted
</Directory>
</VirtualHost>
